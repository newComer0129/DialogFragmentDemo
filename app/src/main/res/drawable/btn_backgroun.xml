<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/orange" android:endColor="@color/darkorange" android:angle="270"/>
            <size android:width="@dimen/reminder_fragment_width" android:height="@dimen/reminder_fragment_height"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:startColor="@color/gray" android:endColor="@color/gray" android:angle="270"/>
            <size android:width="@dimen/button_width" android:height="@dimen/button_height"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="#C1FFC1" android:endColor="#C1FFC1" android:angle="270"/>
            <size android:width="@dimen/button_width" android:height="@dimen/button_height"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>